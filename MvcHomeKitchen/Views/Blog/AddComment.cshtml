@model MvcHomeKitchen.Models.Concrete.BlogComment

@using (Html.BeginForm("AddComment", "Blog", FormMethod.Post))
{
    <div class="comment-top">
        <h4>Lütfen Bu Alana Bir Yorum Bırakınız...</h4>
        <div class="comment-bottom">
            <form class="form-group">
                <input type="hidden" class="form-control" name="BlogId" value="@ViewBag.v1" />
                <textarea class="form-control" name="Context" placeholder="Bu Alana Yorumunu Yaz..." required=""></textarea>
                <button type="submit" class="btn btn-primary submit">Yorumu Gönder</button>
            </form>
        </div>
    </div>
}