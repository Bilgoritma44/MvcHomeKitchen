@using MvcHomeKitchen.Models.Concrete
@model List<Recipe>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <ol class="breadcrumb mb-4" style="background-color:cornflowerblue">
        <li class="breadcrumb-item active" style="color:white">Kategori Adı: @ViewBag.v1</li>
    </ol>

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>Tarif</th>
            <th>Kişi</th>
            <th>Hazırlık</th>
            <th>Pişirme</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CategoryId</td>
                <td><img src="@x.Url" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.Title</td>
                <td>@x.Context</td>
                <td>@x.Person</td>
                <td>@x.Preparation</td>
                <td>@x.Cooking</td>
            </tr>
        }
    </table>
    <a href="/AdminCategory/Index/" class="btn btn-info float-right"><i class="fa fa-backward"></i> Geri Dön</a>
</div>

