
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/FoodLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="#" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad</label>

                            <input type="text" class="form-control" id="validationDefault01" name="Name" placeholder="Adınızı Giriniz..." required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Soyadı</label>
                            <input type="text" class="form-control" id="validationDefault02" name="Surname" placeholder="Soyadınızı Giriniz..." required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">E-mail</label>
                            <input type="text" class="form-control" id="password1" name="Email" placeholder="E-mail Giriniz..." required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre</label>
                            <input type="password" class="form-control" id="password2" name="Password" placeholder="Şifrenizi Giriniz..." required="">
                        </div>

                    </div> 
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="password1" name="Username" placeholder="Kullnıcı Adınızı Giriniz..." required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Resim</label>
                            <input type="text" class="form-control" id="password2" name="PhotoUrl" placeholder="Foto Url Giriniz..." required="">
                        </div>

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit mb-4 float-right">Kayıt Ol</button>
                        <a class="btn btn-danger" href="/Recipe/Index">Vazgeç</a>
                    </div>
                    <p>
                        <b>Bilgileriniz Kesinlikle Hiçbir yerde Paylaşılmayacaktır.Rahat olun Güvendesiniz</b>
                    </p>
                </form>

            </div>
        </div>
    </div>
</section>

