@model MvcHomeKitchen.Models.Concrete.Class7
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>Tarif</th>
            <th>Kişi</th>
            <th>Hazırlık</th>
            <th>Pişirme</th>
        </tr>
        @foreach (var y in Model.Deger1)
        {
            foreach (var x in Model.Deger2)
            {

                if (y.RecipeId == x.RecipeId)
                {
                    <tr>
                        <td>@x.RecipeId</td>
                        <td><img src="@x.Url" class="rounded-circle" style="width:50px;height:50px;" /></td>
                        <td>@x.Title</td>
                        <td>@x.Context</td>
                        <td>@x.Person</td>
                        <td>@x.Preparation</td>
                        <td>@x.Cooking</td>

                    </tr>
                }
            }
        }
    </table>
    <a href="/AdminRecipeBook/Index/" class="btn btn-danger float-right"><i class="fa fa-backward"></i> Geri Dön</a>
</div>

