@using MvcHomeKitchen.Models.Concrete
@model List<RecipeBook>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Yazar</th>
            <th>Defter Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.RecipeBookId</td>
                <td><img src="@x.Writer.PhotoUrl" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.BookName</td>
                <td><a href="/AdminRecipeBook/Delete/@x.RecipeBookId" class="btn btn-outline-danger" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a></td>
                <td><a href="/AdminRecipeBook/Update/@x.RecipeBookId" class="btn btn-outline-warning"><i class="fa fa-edit"></i> Güncelle</a></td>
                <td><a href="/AdminRecipeBook/Detail/@x.RecipeBookId" class="btn btn-outline-info"><i class="fa fa-eye"></i> Detay</a></td>
            </tr>
        }
    </table>
    <a href="/AdminRecipeBook/Add/" class="btn btn-success float-right"><i class="fa fa-plus"></i> Yeni Defter Ekle</a>
</div>

