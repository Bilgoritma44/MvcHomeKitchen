@model MvcHomeKitchen.Models.Concrete.Newsletter
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    @using(Html.BeginForm("Update","AdminAbone",FormMethod.Post))
    { 
        @Html.HiddenFor(x=>x.NewsletterId)
        <label><b>E-mail</b></label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br/>
    <div class="form-group">
        <button type="submit" class="btn btn-warning float-right">Güncelle</button>
        <a href="/AdminAbone/Index" class="btn btn-danger">Vazgeç</a>
    </div>
    }
</div>


