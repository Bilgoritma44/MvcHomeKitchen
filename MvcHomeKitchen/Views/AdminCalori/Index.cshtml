@using MvcHomeKitchen.Models.Concrete
@model List<Calori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CaloriId</td>
                <td><img src="@x.PhotoUrl" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.Title</td>
                <td>@x.Description</td>
                <td><a href="/AdminCalori/Delete/@x.CaloriId" class="btn btn-outline-danger" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a></td>
                <td><a href="/AdminCalori/Update/@x.CaloriId" class="btn btn-outline-warning"><i class="fa fa-edit"></i> Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/AdminCalori/Add/" class="btn btn-success float-right"><i class="fa fa-plus"></i> Yeni Blog Ekle</a>
</div>

