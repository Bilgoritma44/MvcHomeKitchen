@using MvcHomeKitchen.Models.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>E-mail</th>
            <th>Şifre</th>
            <th>Mesaj</th>

        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.WriterId</td>
                <td><img src="@x.PhotoUrl" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.Name</td>
                <td>@x.Surname</td>
                <td>@x.Username</td>
                <td>@x.Email</td>
                <td>@x.Password</td>
                <td><a href="/AdminMessage/Gönder/@x.WriterId" class="btn btn-info"><i class="fa fa-send-o"></i> Mesaj Gönder</a></td>
            </tr>
        }
    </table>
</div>

