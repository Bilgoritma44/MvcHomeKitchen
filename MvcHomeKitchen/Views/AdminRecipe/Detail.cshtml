@using MvcHomeKitchen.Models.Concrete
@model List<RecipeComment>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <ol class="breadcrumb mb-4" style="background-color:cornflowerblue">
        <li class="breadcrumb-item active" style="color:white">Yorum Yapılan Tarif Adı: @ViewBag.b</li>
    </ol>

    <table class="table table-striped">
        <tr>
            <th>Yazar</th>
            <th>Yorum</th>

        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td><img src="@x.Writer.PhotoUrl" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.Context</td>

            </tr>
        }
    </table>
    <a href="/AdminRecipe/Index/" class="btn btn-info float-right"><i class="fa fa-backward"></i> Geri Dön</a>
</div>

