@using MvcHomeKitchen.Models.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>E-mail</th>
            <th>Şifre</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.WriterId</td>
                <td><img src="@x.PhotoUrl" class="rounded-circle" style="width:50px;height:50px;" /></td>
                <td>@x.Name</td>
                <td>@x.Surname</td>
                <td>@x.Username</td>
                <td>@x.Email</td>
                <td>@x.Password</td>
                <td><a href="/AdminWriter/Delete/@x.WriterId" class="btn btn-outline-danger" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a></td>
                <td><a href="/AdminWriter/Update/@x.WriterId" class="btn btn-outline-warning"><i class="fa fa-edit"></i> Güncelle</a></td>
                <td><a href="/AdminWriter/Detail/@x.WriterId" class="btn btn-outline-info"><i class="fa fa-eye"></i> Detay</a></td>
            </tr>
        }
    </table>
    <a href="/AdminWriter/Add/" class="btn btn-success float-right"><i class="fa fa-plus"></i> Yeni Yazar Ekle</a>
</div>

