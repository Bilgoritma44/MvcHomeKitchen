@using MvcHomeKitchen.Models.Concrete
@model List<Blog>
@{
    ViewBag.Title = "MyBlog";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Listem</h4>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Resim </th>
                        <th>Başlık</th>
                        <th>Blog</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                @foreach (var x in Model)
                {
            <tbody>
                <tr>
                    <td class="py-1">
                        <img src="@x.Url" alt="image" />
                    </td>
                    <td>@x.Title</td>
                    <td>@x.Context</td>
                    <td><a href="/WriterProfile/DeleteBlog/@x.BlogId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/WriterProfile/UpdateBlog/@x.BlogId" class="btn btn-warning">Düzenle</a></td>
                </tr>
                
            </tbody>
                   
                }
                
            </table>
        </div>
    </div>
</div>


