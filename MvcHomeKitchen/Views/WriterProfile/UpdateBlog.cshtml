@model MvcHomeKitchen.Models.Concrete.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}

<div class="container">
    <h4 class="text-center" style="color:red">Blog Güncelleme Sayfası</h4>
    @using (Html.BeginForm("UpdateBlog", "WriterProfile", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.BlogId)
        </div>
        <label><b>Resim Url</b></label>
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
        <br />
        <label><b>Başlık</b></label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label><b>Blog İçerik</b></label>
        @Html.TextAreaFor(x => x.Context, 10, 3, new { @class = "form-control" })
        <br />
        <button type="submit" class="btn btn-info float-right">Blog Güncelle</button>
    }
</div>

