@model MvcHomeKitchen.Models.Concrete.Class5
@{
    ViewBag.Title = "RecipeBook";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="container">
    <a data-toggle="modal" data-target="#Modal1" class="btn btn-info float-right"><i class="fas fa-plus"></i> Yeni Defter Ekle</a>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="text-md-center" style="color:red">Yeni Defter Ekle</h4>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="form-group">
                            <label><small class="text-muted">Defter İsmi</small></label>
                            <input class="form-control" type="text" name="BookName" placeholder="Defter Adı:" required="" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger float-right">Kaydet</button>
                            <a href="/WriterProfile/RecipeBook" class="btn btn-default" style="background-color:blueviolet;color:white">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="Modal2">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="text-md-center" style="color:red">Defteri Silmek İstediğine Emin misin?</h4>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="form-group">
                            <label><small class="text-muted">Defter İsmi</small></label>
                            <input class="form-control" type="text" name="BookName" placeholder="Defter Adı:" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger float-right">Sil</button>
                            <a href="/WriterProfile/RecipeBook" class="btn btn-default" style="background-color:blueviolet;color:white">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />
    <div class="row">
        @foreach (var x in Model.Deger2)
        {
            <div class="col-md-4">
                <div class="card-deck">
                    <div class="card">
                        <a href="#" class="text-center">  <img class="card-img-top" src="~/Resim/ab.jfif" alt="Card image cap"></a>
                        <div class="card-body">
                            <h1 class="card-title" style="color:red">@x.BookName</h1>

                        </div>
                        <div class="card-footer">
                            <p class="card-text">
                                <a href="/WriterProfile/UpdateRecipeBook/@x.RecipeBookId"><i class="fas fa-edit"></i> Düzenle</a>
                                <a href="/WriterProfile/DeleteRecipeBook/@x.RecipeBookId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fas fa-trash"></i> Sil</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
<script>
    $('#DeleteBtn').click(function () {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Poof! Your imaginary file has been deleted!", {
                        icon: "success",
                    });
                } else {
                    swal("Your imaginary file is safe!");
                }
            });
    });

</script>