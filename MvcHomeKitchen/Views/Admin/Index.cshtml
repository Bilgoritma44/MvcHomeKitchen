@model IEnumerable<MvcHomeKitchen.Models.Concrete.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>E-mail</th>
            <th>Şifre</th>
            <th>Rol</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AdminId</td>
                <td>@x.Email</td>
                <td>@x.Password</td>
                <td>@x.Role</td>
                <td><a href="/Admin/Delete/@x.AdminId" class="btn btn-outline-danger" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a></td>
                <td><a href="/Admin/Update/@x.AdminId" class="btn btn-outline-warning"><i class="fa fa-edit"></i> Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/Add/" class="btn btn-success float-right"><i class="fa fa-plus"></i> Yeni Admin Ekle</a>
</div>

