
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/FoodLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Admin Girişi</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
                {

                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E-mail Adresi</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="Email" placeholder="" required="">
                        <small id="emailHelp" class="form-text text-muted">Bilgileriniz Bizimle Asla Paylaşılmayacaktır.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="Password" placeholder="" required="">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit mb-4 float-right">Giriş Yap</button>
                        <a class="btn btn-danger" href="/Recipe/Index">Vazgeç</a>
                    </div>
                    
                }

            </div>
        </div>
    </div>
</section>

